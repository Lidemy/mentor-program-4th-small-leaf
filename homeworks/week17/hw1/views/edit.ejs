<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('temp/header') %>
  <title>部落格</title>
</head>
<body>
  <nav class="navbar">
    <div class="wrapper navbar__wrapper">
      <div class="navbar__site-name">
        <a href='/'>Who's Blog</a>
      </div>
      <ul class="navbar__list">
        <div>
          <li><a href="/post_list">文章列表</a></li>
          <li><a href="/category_list">分類專區</a></li>
          <li><a href="/about_me">關於我</a></li>
        </div>
        <div>
          <% if(username) { %>
            <li><a href="/admin">管理文章</a></li>
            <li><a href="/admin_category">管理分類</a></li>
            <li><a href="/logout">登出</a></li>
            <% } else { %>
              <li><a href="/login">登入</a></li>
            <% } %>
        </div>
      </ul>
    </div>
  </nav>
  <section class="banner">
    <div class="banner__wrapper">
      <h1>存放技術之地</h1>
      <div>Welcome to my blog</div>
    </div>
  </section>
  <div class="container-wrapper">
    <div class="container">
      <div class="edit-post">
        <form action="/edit_post" method="POST">
          <div class="edit-post__title">
            編輯文章：
          </div>
          <div class="edit-post__input-wrapper">
            <input name="title" class="edit-post__input" placeholder="請輸入文章標題" value="<%= post.title %>"/>
          </div>
          <div class="edit-post__input-wrapper">
            <select name="category_id">
              <%
                categories.forEach(function(category) {
                let is_selected = post.CategoryId === category.id? 'selected':''
              %>
                <option value="<%= category.id %>" <%= is_selected %>><%= category.name %></option>CategoryId
              <% }) %>
            </select>
          </div>
          <div class="edit-post__input-wrapper">
            <textarea name="content" rows="20" class="edit-post__content"><%= post.content %></textarea>
          </div>
          <div class="edit-post__btn-wrapper">
            <% if(errMessage && errMessage.length > 0) { %>
              <span class="error">
                <%= errMessage %>
              </span>
            <% } %>
              <input class="edit-post__btn" type="submit" value="送出"/>
          </div>
          <input type="hidden" name="id" value="<%= post.id %>">
          <input type="hidden" name="lastPage" value="<%= lastPage %>">
        </form>
      </div>
    </div>
  </div>
  <footer>Copyright © 2020 Who's Blog All Rights Reserved.</footer>
</body>
</html>